<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".todoapp.ToDoActivity"
    android:orientation="vertical"
    android:background="@color/todo_background_app_ToDo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/toDo_title"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginVertical="70dp"
        android:layout_marginHorizontal="32dp"
        android:textColor="@color/white"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ToDo_categories"
        android:textColor="@color/todo_subtitle_text"
        android:layout_marginHorizontal="32dp"
        >
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_task"
        android:layout_marginTop="32dp"
        style="@style/ToDoSubtitle"
        >
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTask"
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:tint = "@color/white"
        app:backgroundTint="@color/todo_accent"
        android:src="@drawable/baseline_exposure_plus_1_24"
        android:layout_margin="23dp"
        >
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</FrameLayout>