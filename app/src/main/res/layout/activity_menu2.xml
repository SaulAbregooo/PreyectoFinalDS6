<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity.MenuActivity">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SALUDAPP"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btnSaludaAPP"
        ></Button>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSaludaAPP"
        android:id="@+id/IMCapp"
        ></Button>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To Do"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IMCapp"
        android:id="@+id/btnToDo"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>